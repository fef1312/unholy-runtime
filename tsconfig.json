{
    "compilerOptions": {
        "target": "ES2019",
        "module": "CommonJS",
        "lib": [ "ES2019" ],
        "sourceMap": true,
        "outDir": "./build",
        "removeComments": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
    },
    "include": [ "src/**/*" ],
    "exclude": [
        "node_modules"
    ]
}
